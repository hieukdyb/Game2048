<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="top"
    android:background="#123"
    android:weightSum="100"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".play2048">
    <LinearLayout
        android:paddingTop="70sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:weightSum="10"
        android:layout_weight="30"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights">
            <TextView
                android:layout_marginStart="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2048"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#ddd"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10sp"
            android:layout_width="0sp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_margin="3sp"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="60sp"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:background="@drawable/boxscores">
                    <LinearLayout
                        android:gravity="center|bottom"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:textColor="#ccc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/diemso"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center|top"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/diemso"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_0"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_margin="3sp"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="60sp"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:background="@drawable/boxscores">
                    <LinearLayout
                        android:gravity="center|bottom"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:textColor="#ccc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/diemcao"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center|top"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/diemcao"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_1204"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="4sp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded">
                <RelativeLayout
                    android:padding="5sp"
                    android:layout_marginRight="15sp"
                    android:background="@drawable/newgame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/quaylai"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_gravity="left"
                        android:background="@drawable/quaylai1"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </RelativeLayout>
                <LinearLayout
                    android:padding="5sp"
                    android:background="@drawable/newgame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/reset"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_gravity="left"
                        android:background="@drawable/reset"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

